<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="com.cranberrygame.phonegap.plugin.rateapp"
    version="1.0.4">
	
    <name>Phonegap RateApp plugin</name>
    <description>Phonegap RateApp plugin</description>
    <author>Sang Ki Kwon (Cranberrygame)</author>	
    <license>MIT</license>
    <keywords>phonegap, plugin, rateapp</keywords>
    <repo>https://github.com/cranberrygame/com.cranberrygame.phonegap.plugin.rateapp</repo>
    <issue>https://github.com/cranberrygame/com.cranberrygame.phonegap.plugin.rateapp/issues</issue>	
	<engines>
	    <engine name="cordova" version=">=3.0.0" />
	</engines>
 	
<!--	
	<dependency id="org.apache.cordova.dialogs@0.2.10"/>
-->
	<dependency id="org.apache.cordova.dialogs"/>

    <dependency id="org.apache.cordova.inappbrowser" />
	
    <js-module src="www/rateapp.js">
        <clobbers target="window.rateapp"/>
    </js-module>
	
    <!-- wp8 -->
    <platform name="wp8">
        <config-file target="config.xml" parent="/*">
            <feature name="RateApp">
                <param name="wp-package" value="RateApp"/>
            </feature>
        </config-file>

        <source-file src="src/wp8/RateApp.cs" />
    </platform>	
</plugin>